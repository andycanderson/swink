<h1>Applicant Home</h1>

<br>
<div ng-click="getProfileInfo()" 
ng-init="editProfile=false">CLICK TO EDIT PROFILE</div>
<h2 ng-model="profile"></h2>
<div ng-if="editProfile">

	<!-- patch to /myprofile -->
	<form ng-submit="saveProfile(link, tag_list)">
		<h2>Link</h2>
		<input type="text" ng-model="link" name="text" />
		<h2>Tag List</h2>
		<textarea type="text" ng-model="tag_list" name="text" /></textarea>
		<input type="submit" id="submit" value="Submit" />
	</form>
</div>

<br><br>

<div class="row">
	<div class="col-md-3"></div>
	<div class="col-md-6">
		<h4>Based on These Tags: </h4>
		<div ng-repeat="tag in tags">{{tag}}</div>
		<br>
		<h4>Feed:</h4>
		<ul class="list-group">
		<div ng-repeat="job in feed">
			<br>
			<li>
			<h5>{{job.title}}</h5>
			<p>{{job.description}}</p>
			<div ng-click="like(job.id)">Like</div>
			<br>
			<div ng-click="dislike(job.id)">Dislike</div>
			<p>{{job.created_at}}</p>
			</li>
		</div>
		</ul>
		
	

		<br>

		<h4>Liked Jobs: </h4>
		<div ng-repeat="job in liked">
			<h5>{{job.title}}</h5>
			<p>{{job.description}}</p>
			<br>
		</div>
	</div>
	<div class="col-md-3"></div>
</div>

