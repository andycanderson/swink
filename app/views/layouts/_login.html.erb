<%= form_for(:session, url: sessions_path, html: {class: "form-inline", role: "form"})  do |f|  %>
	<div class="form-group">
		<%= f.label :email, class: "sr-only" %>
	<%= f.text_field :email, class: "form-control", placeholder: "Email" %>
	</div>

	<div class="form-group">
		<%= f.label :password, class: "sr-only", for: "exampleInputPassword2"%>
	<%= f.password_field :password, class: "form-control", id: "exampleInputPassword2", placeholder: "Password" %>
	</div>

	<%= f.submit "Sign In", class: "btn btn-default" %>
<% end %> 